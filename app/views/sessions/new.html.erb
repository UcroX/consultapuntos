<div class="container p-3">
  <div class="row justify-content-center p-3">
    <div class="col-sm-6 shadow border rounded">
      <h1>Ingresar</h1>
      <%= form_tag controller: :sessions, action: :create do %>
        <div class="form-group">
          <%= label_tag(:cuenta, "Nombre de usuario") %>
          <%= text_field_tag(:cuenta, nil, class: 'form-control input-lg') %>
        </div>
        <div class="form-group">
          <%= label_tag(:password, "Password") %>
          <%= password_field_tag(:password, nil, class: 'form-control input-lg') %>
        </div>
        <div class="text-right"><%= submit_tag("Ingresar", class: 'btn btn-danger btn-lg btn-block my-3') %></div>
      <% end %>
    </div>
  </div>
</div>
