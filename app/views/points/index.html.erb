<div class="container">
  <div class="row">
    <div class="col-sm-12 mt-3">
      <h1>Puntos de ventas</h1>

      <div class="container d-flex justify-content-end mt-3 my-3">
        <%= link_to "Ingresar nuevo punto de venta", new_point_path, class: "btn btn-danger" %>
      </div>

      <table class="table">
        <tr>
          <th>Id</th>
          <th>Nombre</th>
          <th>Centro de Costo</th>
          <th>Tecnologia</th>
          <th>Observacion</th>
          <th>Ip Radio</th>
          <th>Ip Telefono</th>
          <th>Ip Computador</th>
        </tr>
        <% @points.each do |point| %>
        <tr>
          <td><%= point.id %></td>
          <td><%= point.name %></td>
          <td><%= point.ccosto %></td>
          <td><%= point.tecnologia %></td>
          <td><%= point.observacion %></td>
          <td><%= point.ipradio %></td>
          <td><%= point.iptele %></td>
          <td><%= point.ipcom %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
